<% # raise %>

<h1>Cocktail <%= @cocktail.name %></h1>

<ul>
  <% @cocktail.doses.each do |dose|%>
    <li>
      <%= dose.description %> <%= dose.ingredient.name %>
      <%= link_to "Delete", dose_path(dose) , method: :delete, data: { confirm: 'Are you sure?' } %>
    </li>
  <% end %>
</ul>
<%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>

<%= link_to "Add new dose", new_cocktail_dose_path(@cocktail) %>
<%= link_to "Delete", cocktail_path(@cocktail) , method: :delete, data: { confirm: 'Are you sure?' } %>
<%= link_to "Back to cocktails", cocktails_path %>
